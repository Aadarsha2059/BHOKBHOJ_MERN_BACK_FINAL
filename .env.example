# BhokBhoj Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=5050
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mithobites

# JWT Configuration
SECRET=your-super-secret-jwt-key-here-change-in-production

# Email Configuration (for OTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173
PRODUCTION_FRONTEND_URL=https://yourdomain.com

# Session Configuration
SESSION_SECRET=bhokbhoj_session_secret_key_2025

# HTTPS Configuration (optional)
HTTPS_PORT=5443
HTTP_REDIRECT_PORT=5050

# Development Settings
USE_DOCKER_MONGO=false

# Security Testing (Burp Suite compatibility)
ALLOW_SECURITY_TESTING=true